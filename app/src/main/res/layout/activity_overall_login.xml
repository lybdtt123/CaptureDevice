<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/overall_shadow_login_bg"
    android:layout_gravity="center_horizontal">

    <app.jietuqi.cn.widget.OverScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/mOverallLoginAccountSmsCodeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账号密码登录"
                android:textColor="@color/white"
                android:textSize="@dimen/overall26px"
                android:layout_alignParentRight="true"
                android:padding="@dimen/normalPadding"
                android:visibility="gone"/>

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/mOverallLoginAccountAvatarIv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/head_default"
                app:layout_heightPercent="28%w"
                app:layout_widthPercent="28%w"
                app:riv_oval="true"
                app:riv_corner_radius="75dp"
                android:scaleType="centerCrop"
                android:layout_centerHorizontal="true"
                app:layout_marginLeftPercent="4.26%w"
                app:layout_marginRightPercent="3.27%w"
                app:layout_marginTopPercent="13.1%w"
                app:layout_marginBottomPercent="6.3%w"
                app:riv_border_width="2dp"
                app:riv_border_color="@color/white"/>

            <ImageView
                android:id="@+id/view1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/account_left"
                android:layout_toLeftOf="@+id/mOverallLoginAccountEt"
                android:layout_alignBottom="@+id/mOverallLoginAccountEt"
                app:layout_marginRightPercent="6.67%w"/>
            <EditText
                android:id="@+id/mOverallLoginAccountEt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="手机号/邮箱/昵称"
                android:background="@null"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:layout_alignLeft="@+id/mOverallLoginAccountAvatarIv"
                android:layout_below="@+id/mOverallLoginAccountAvatarIv"
                android:textSize="@dimen/overall32px"
                android:maxLength="11"
                android:inputType="number" />
            <TextView
                android:id="@+id/line1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/wechatLineNarrow"
                android:background="@color/white"
                android:layout_below="@+id/mOverallLoginAccountEt"
                app:layout_marginTopPercent="1.67%w"
                app:layout_widthPercent="79.73%w"
                android:layout_centerHorizontal="true"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/password_left"
                android:layout_toLeftOf="@+id/mOverallLoginAccountEt"
                android:layout_alignBottom="@+id/mOverallLoginPasswordEt"
                android:layout_alignLeft="@+id/view1"
                app:layout_marginRightPercent="6.67%w"/>
            <EditText
                android:id="@+id/mOverallLoginPasswordEt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="请输入密码"
                android:background="@null"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:layout_alignLeft="@+id/mOverallLoginAccountAvatarIv"
                android:layout_below="@+id/line1"
                app:layout_marginTopPercent="1.67%w"
                android:textSize="@dimen/overall32px"/>

            <TextView
                android:id="@+id/mOverallLoginGetVerificationCodeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取验证码"
                android:layout_alignBottom="@+id/mOverallLoginPasswordEt"
                android:layout_alignRight="@+id/line2"
                android:layout_alignTop="@+id/mOverallLoginPasswordEt"
                android:gravity="center"
                android:textColor="@color/white"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/line2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/wechatLineNarrow"
                android:background="@color/white"
                android:layout_below="@+id/mOverallLoginPasswordEt"
                app:layout_marginTopPercent="1.67%w"
                app:layout_widthPercent="79.73%w"
                android:layout_centerHorizontal="true"
                app:layout_marginBottomPercent="6.3%w"/>
            <Button
                android:id="@+id/mOverallLoginBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登陆"
                android:textColor="#459DD8"
                android:layout_below="@+id/line2"
                android:layout_centerHorizontal="true"
                app:layout_widthPercent="80%w"
                app:layout_marginBottomPercent="6.53%w"
                android:textSize="@dimen/overall32px"/>

            <TextView
                android:id="@+id/mOverallLoginForgetPasswordTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="忘记密码"
                android:textColor="@color/white"
                android:layout_below="@+id/mOverallLoginBtn"
                android:layout_alignLeft="@+id/mOverallLoginBtn"
                app:layout_marginLeftPercent="7.07%w"
                app:layout_marginBottomPercent="10.3%w"
                android:textSize="@dimen/overall26px"/>
            <TextView
                android:id="@+id/mOverallLoginSignInTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="立即注册"
                android:textColor="@color/white"
                android:layout_below="@+id/mOverallLoginBtn"
                android:layout_alignRight="@+id/mOverallLoginBtn"
                app:layout_marginRightPercent="7.07%w"
                android:textSize="@dimen/overall26px"/>

            <RelativeLayout
                android:id="@+id/layout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mOverallLoginForgetPasswordTv"
                android:layout_alignLeft="@+id/mOverallLoginForgetPasswordTv"
                android:layout_alignRight="@+id/mOverallLoginSignInTv">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/wechatLineNarrow"
                    android:background="@color/white"
                    android:layout_toLeftOf="@+id/view2"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/view2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="第三方账号登录"
                    android:textColor="@color/white"
                    android:textSize="@dimen/overall26px" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/wechatLineNarrow"
                    android:background="@color/white"
                    android:layout_toRightOf="@+id/view2"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <com.zhy.android.percent.support.PercentLinearLayout
                android:id="@+id/layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_below="@+id/layout1"
                app:layout_marginTopPercent="7.1%w">
                <ImageView
                    android:id="@+id/mOverallLoginWechatIv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/login_wechat"
                    app:layout_marginRightPercent="18.13%w"/>
                <ImageView
                    android:id="@+id/mOverallLoginQQIv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/login_qq"/>
            </com.zhy.android.percent.support.PercentLinearLayout>

            <TextView
                android:id="@+id/mOverallLoginUserAgreementTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登录即表示您同意《用户许可协议》"
                android:layout_below="@+id/layout2"
                android:textColor="@color/white"
                app:layout_marginTopPercent="5.8%w"
                app:layout_marginBottomPercent="8.8%w"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/overall26px"/>
        </com.zhy.android.percent.support.PercentRelativeLayout>
    </app.jietuqi.cn.widget.OverScrollView>

</com.zhy.android.percent.support.PercentRelativeLayout>