<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:percent="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/normalPadding">

    <ImageView
        android:id="@+id/bankPicIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/bank_abc"
        percent:layout_heightPercent="15%w"
        percent:layout_widthPercent="15%w"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/bankNameTv"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="@dimen/wechatNormalTextSize"
        android:textColor="@color/wechat_deep_text_color"
        android:gravity="center_vertical"
        android:padding="@dimen/normalPadding"
        android:text="招商银行"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/bankPicIv"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/wechatLineNarrow"
        android:background="@color/wechatBg"
        android:layout_below="@+id/bankPicIv"
        android:layout_marginTop="@dimen/normalPadding"/>
</com.zhy.android.percent.support.PercentRelativeLayout>