<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:percent="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/wechatTitleBar"
    android:gravity="center_vertical">
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/wechatLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        percent:layout_heightPercent="14%w">
        <ImageView
            android:id="@+id/wechatTitleLeftIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/wechat_title_title"
            android:padding="10dp"
            percent:layout_heightPercent="100%h"
            percent:layout_widthPercent="100%h"/>
        <TextView
            android:id="@+id/wechatTitleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信红包"
            android:textColor="@android:color/white"
            android:textSize="@dimen/wechatNormalTextSize"
            android:padding="10dp"
            android:gravity="center"
            android:layout_toRightOf="@+id/wechatTitleLeftIv"
            android:layout_alignTop="@+id/wechatTitleLeftIv"
            android:layout_alignBottom="@+id/wechatTitleLeftIv"/>

        <TextView
            android:id="@+id/wechatTitleRightTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="红包详情"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/wechatTitleLeftIv"
            android:layout_alignBottom="@+id/wechatTitleLeftIv"
            android:gravity="center"
            android:layout_marginRight="@dimen/normalPadding"
            android:textSize="@dimen/wechatLittleTextSize"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/thirdPointIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/wechat_more"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/normalPadding"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/sureTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确定"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/normalPadding"
            android:background="@drawable/green_round_cornor"
            android:padding="@dimen/normalPadding"
            android:textColor="@color/white"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/wechatChangeDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="零钱明细"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/wechatTitleLeftIv"
            android:layout_alignBottom="@+id/wechatTitleLeftIv"
            android:gravity="center"
            android:layout_marginRight="@dimen/normalPadding"
            android:textSize="@dimen/wechatLittleTextSize"
            android:visibility="gone"/>
    </com.zhy.android.percent.support.PercentRelativeLayout>

</com.zhy.android.percent.support.PercentRelativeLayout>