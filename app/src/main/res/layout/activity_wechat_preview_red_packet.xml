<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:background="@color/wechatBg">

    <!--<include-->
        <!--android:id="@+id/titleLayout"-->
        <!--layout="@layout/base_wechat_title"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"/>-->
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/mPreviewPacketTopLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/wechat_red_packet_top"
        app:layout_heightPercent="21%h">
        <com.zhy.android.percent.support.PercentLinearLayout
            android:id="@+id/titleLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_heightPercent="14%w"
            android:gravity="center_vertical"
            android:padding="@dimen/normalPadding">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/wechat_preview_back" />

            <TextView
                android:id="@+id/wechatTitleTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信红包"
                android:textColor="@android:color/white"
                android:textSize="@dimen/wechatNormalTextSize"
                android:padding="10dp"
                android:gravity="center"
                android:layout_toRightOf="@+id/wechatTitleLeftIv"
                android:layout_alignTop="@+id/wechatTitleLeftIv"
                android:layout_alignBottom="@+id/wechatTitleLeftIv"/>
        </com.zhy.android.percent.support.PercentLinearLayout>
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/mPreviewHeadIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            app:layout_heightPercent="18%w"
            app:layout_widthPercent="18%w"
            android:translationY="30dp"
            android:orientation="vertical"
            app:riv_border_color="@color/wechatPreviewTitle"
            app:riv_oval="false"
            app:riv_corner_radius="5dp"
            app:riv_border_width="2dp"
            android:scaleType="centerCrop"/>

    </com.zhy.android.percent.support.PercentRelativeLayout>
    <TextView
        android:id="@+id/mPreviewPacketNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="丫丫"
        android:layout_below="@+id/mPreviewPacketTopLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        style="@style/wechatTextSameSize"
        android:textColor="@color/wechat_deep_text_color"/>

    <TextView
        android:id="@+id/mPreviewDescriptionTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="恭喜发财，大吉大利"
        android:layout_below="@+id/mPreviewPacketNameTv"
        android:layout_centerHorizontal="true"
        style="@style/wechatTextSameSize"
        android:textColor="@color/wechatGray"/>
    <LinearLayout
        android:id="@+id/mMoneyLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/mPreviewDescriptionTv"
        android:layout_marginTop="20dp"
        android:gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <dasheng.com.capturedevice.wechat.wechatfont.WechatNumTextView
                android:id="@+id/mMoneyTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/wechat_deep_text_color"
                android:text="100000.00"
                android:textSize="60sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/wechat_deep_text_color"
                android:text="元"
                android:layout_marginLeft="5dp"
                android:textSize="@dimen/wechatNormalTextSize"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已存入零钱，可直接提现"
            android:textSize="@dimen/wechatLittleTextSize"
            android:textColor="@color/wechatBlueShalow"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/wechat_red_packet_line"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/mMoneyLayout"
        android:scaleType="fitXY" />
    <TextView
        android:id="@+id/mLeaveMessageTv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="留言"
        android:textColor="@color/wechat_deep_text_color"
        android:layout_marginTop="@dimen/wechatLineHeight"
        android:background="@color/white"
        android:layout_below="@+id/line"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/normalPadding"/>
    <LinearLayout
        android:id="@+id/mReceiverLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_below="@+id/line"
        android:orientation="vertical"
        android:visibility="gone">
        <TextView
            android:id="@+id/mPreviewMoneyTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1个红包共100.00元"
            android:layout_below="@+id/line"
            android:padding="@dimen/normalPadding"
            android:background="@color/white"
            android:textColor="@color/wechatGray"/>
        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/normalPadding">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/mReceiveNameIv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/default_head"
                app:layout_heightPercent="12%w"
                app:layout_widthPercent="12%w"
                app:riv_corner_radius="5dip"
                android:scaleType="fitXY"
                android:layout_marginRight="@dimen/normalPadding"/>
            <TextView
                android:id="@+id/mReceiveNameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="蛋疼先森"
                android:layout_toRightOf="@+id/mReceiveNameIv"
                android:layout_alignTop="@+id/mReceiveNameIv"
                app:layout_heightPercent="6%w"
                android:gravity="center"
                style="@style/wechatTextSameSize"
                android:textColor="@color/wechat_deep_text_color"/>
            <TextView
                android:id="@+id/mReceiveTimeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17:22:59"
                android:layout_toRightOf="@+id/mReceiveNameIv"
                android:layout_alignBottom="@+id/mReceiveNameIv"
                app:layout_heightPercent="6%w"
                android:gravity="center"
                style="@style/wechatTextSameSize"
                android:textColor="@color/wechatGray"/>
            <TextView
                android:id="@+id/mReceiveMoneyTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100.00元"
                android:layout_alignTop="@+id/mReceiveNameIv"
                android:layout_alignParentRight="true"
                app:layout_heightPercent="6%w"
                android:gravity="center"
                style="@style/wechatTextSameSize"
                android:textColor="@color/wechat_deep_text_color"/>
        </com.zhy.android.percent.support.PercentRelativeLayout>

    </LinearLayout>
</com.zhy.android.percent.support.PercentRelativeLayout>